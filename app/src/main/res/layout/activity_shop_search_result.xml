<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peaktime.dawntime.Shop.ShopSearchResultActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ED508E">

        <ImageButton
            android:id="@+id/shopBackBtn"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shop_navi_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOP"
            android:textColor="#FFFFFF"
            android:textSize="21dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/noto_sans_cjk_kr_demilight"/>

        <ImageView
            android:background="@drawable/shop_navi_moon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/title"
            android:layout_marginTop="20dp"
            />

        <!--<ImageButton-->
            <!--android:id="@+id/shopSearchBtn"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:background="@drawable/shop_navi_search_white"-->
            <!--android:layout_width="48dp"-->
            <!--android:layout_height="48dp"-->
            <!--android:layout_marginTop="7dp"/>-->

    </RelativeLayout>

    <TextView
        android:id="@+id/shop_search_text"
        android:layout_below="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50,000원 ~ 10,0000원 / #딜도"
        android:textSize="15dp"
        android:textColor="#ED508E"
        android:fontFamily="@font/noto_sans_cjk_kr_medium"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:includeFontPadding="false"

        />

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/shop_search_text"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FF81B3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="9dp"/>

    <!--&lt;!&ndash;여기에 최신순 추가하기&ndash;&gt;-->

    <fragment
        android:id="@+id/fragmentA"
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.peaktime.dawntime.Shop.fragment.GoodsSortFragment"
        tools:layout="@layout/fragment_shop_goods_sort"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"/>



</RelativeLayout>

