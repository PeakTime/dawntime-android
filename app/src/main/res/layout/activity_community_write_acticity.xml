<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context="com.peaktime.dawntime.Community.CommunityWriteActicity">

    <RelativeLayout
        android:id="@+id/community_tab"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/community_backbtn1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/navi_back_navy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="글쓰기"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/b_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/graylinedrawable"
            android:hint="제목"
            android:textSize="12dp"
            android:padding="5dp" />

        <EditText
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/graylinedrawable"
            android:gravity="top"
            android:textSize="12dp"
            android:hint="해당 게시물이 악의적인 내용이나 정치적글 편향된 글을 작성시 신고 대상이 되어 삭제되어 질 수 있습니다."
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/horsehead_button"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/graylinedrawable"
            android:text="머릿말 선택"
            android:textSize="14dp" />

        <Button
            android:id="@+id/picture_button"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/graylinedrawable"
            android:text="사진 추가"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/community_addImg"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="10dp">
        <!--
        <android.support.v7.widget.RecyclerView
            android:id="@+id/community_write_image_recycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/community_img" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/community_img" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/community_img" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/community_img" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/community_img" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/write_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/purpledrawable"
            android:text="글 올리기"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />


    </LinearLayout>


</LinearLayout>
