<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:id="@+id/community_data">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/horsehead"
            android:background="@drawable/horseheaddrawble"
            android:layout_width="48dp"
            android:layout_height="19dp"
            android:layout_margin="10dp"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:paddingTop="3dp"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:text="리뷰" />

        <ImageView
            android:id="@+id/communityimage"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_below="@+id/horsehead"
            android:layout_centerHorizontal="true"
            android:src="@drawable/brown" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/layout1"
        android:layout_weight="2"
        android:background="#FCFCFC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="title" />

            <TextView
                android:id="@+id/contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="contents" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="11dp"
                android:src="@drawable/view_unfire_navy" />
            <TextView
                android:id="@+id/unfireContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_gravity="center"
                android:text="contents" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="9dp"
                android:src="@drawable/view_reply_navy"/>
            <TextView
                android:id="@+id/unreplyContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_gravity="center"
                android:text="contents" />


            <ImageView
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:src="@drawable/view_unscrap_navy"/>
            <TextView
                android:id="@+id/unstarContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_gravity="center"
                android:text="contents" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>