<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/community_commentdata"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/datadrawable"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/horsehead"
            android:layout_width="48dp"
            android:layout_height="19dp"
            android:layout_margin="10dp"
            android:background="@drawable/navydrawable"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="3dp"
            android:text="리뷰"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/communityimage"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_below="@+id/horsehead"
            android:layout_centerHorizontal="true"
            android:src="@drawable/brown" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/layout1"
        android:layout_weight="2"
        android:background="#FCFCFC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contents"
                android:textSize="17dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>