<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/community_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/community_tab"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF">


        <TextView
            android:id="@+id/communityTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="커뮤니티"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/community_write"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@+id/community_search"
                android:background="@android:color/transparent"
                android:src="@drawable/navi_write_navy" />

            <ImageButton
                android:id="@+id/community_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/navi_search_navy" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            >
            <Button
                android:id="@+id/community_detail"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignLeft="@+id/community_search"
                android:background="@drawable/navi_downarrow_gray"/>

        </LinearLayout>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/community_cate_tab"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:background="#FFFFFF"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone"
            >
            <LinearLayout
                android:id="@+id/cate_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/horsehead_0"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="걱정"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp"
                    />
                <Button
                    android:id="@+id/horsehead_1"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="리뷰"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
                <Button
                    android:id="@+id/horsehead_2"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="추천"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
                <Button
                    android:id="@+id/horsehead_3"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="애인"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
                <Button
                    android:id="@+id/horsehead_4"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="팁"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cate_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cate_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/horsehead_5"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="썰"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
                <Button
                    android:id="@+id/horsehead_6"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="질문"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
                <Button
                    android:id="@+id/horsehead_7"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="기타"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
                <Button
                    android:id="@+id/horsehead_8"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="자랑"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
                <Button
                    android:id="@+id/horsehead_9"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/horsehead_background_selector"
                    android:text="건의"
                    android:textColor="@color/horsehead_font_selector"
                    android:textSize="13dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cate_2"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                >
                <Button
                    android:id="@+id/community_cate_hide"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignLeft="@+id/community_search"
                    android:background="@drawable/navi_uparrow_gray"/>
            </LinearLayout>
        </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>