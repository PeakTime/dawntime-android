<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/community_data"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/datadrawable"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/horsehead"
            android:layout_width="48dp"
            android:layout_height="19dp"
            android:layout_margin="10dp"
            android:background="@drawable/navydrawable"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:gravity="center"
            android:text="리뷰"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/communityimage"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_below="@+id/horsehead"
            android:layout_centerHorizontal="true"
            android:src="@drawable/brown" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/layout1"
        android:layout_weight="2"
        android:background="#FCFCFC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_cjk_kr_medium"
                android:includeFontPadding="false"
                android:text="title"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_cjk_kr_regular"
                android:includeFontPadding="false"
                android:lines="2"
                android:ellipsize="end"
                android:text="contents"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fire_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/view_unfire_navy" />

            <TextView
                android:id="@+id/unfireContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:text="1117"
                android:textSize="8dp" />

            <ImageView
                android:id="@+id/reply_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/view_reply_navy" />

            <TextView
                android:id="@+id/unreplyContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:text="256"
                android:textSize="8dp" />


            <ImageView
                android:id="@+id/scrap_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/view_unscrap_navy" />

            <TextView
                android:id="@+id/unstarContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:text="465"
                android:textSize="8dp" />

        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:background="#001960" />
</RelativeLayout>