<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.peaktime.dawntime.Shop.ShopCategoryActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ED508E">

        <ImageButton
            android:id="@+id/shopBackBtn"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shop_navi_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOP"
            android:textColor="#FFFFFF"
            android:textSize="21dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/noto_sans_cjk_kr_demilight"/>

        <ImageView
            android:background="@drawable/shop_navi_moon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/title"
            android:layout_marginTop="20dp"
            />

        <ImageButton
            android:id="@+id/shopSearchBtn"
            android:layout_alignParentRight="true"
            android:background="@drawable/shop_navi_search_white"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"/>

    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/shop_brand_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/layout"
        />

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/shop_brand_list"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FF81B3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="9dp"/>

    <!--여기에 최신순 추가하기-->


    <RelativeLayout
        android:id="@+id/shop_sort_layout"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_alignParentRight="true"
        android:background="@drawable/shop_sort_layout"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"

        >

        <TextView
            android:id="@+id/sort_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신순"
            android:textColor="#ED508E"
            android:fontFamily="@font/noto_sans_cjk_kr_demilight"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/sort_img"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="12dp"
            />

        <ImageView
            android:id="@+id/sort_img"
            android:layout_width="9dp"
            android:layout_height="6dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shop_view_fold_down"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/shop_brand_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shop_sort_layout"
        />

    <!--<android.support.v4.view.ViewPager-->
    <!--android:id="@+id/shop_category_viewpager"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_marginTop="12dp"-->
    <!--&gt;-->
    <!--</android.support.v4.view.ViewPager>-->






</RelativeLayout>