<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peaktime.dawntime.Community.CommunityDetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/community_tab"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/community_backbtn"
            android:layout_alignParentLeft="true"
            android:background="@drawable/navi_back_navy"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/font"
            android:text="리뷰"
            android:textSize="20dp"
            android:gravity="center" />
        <ImageButton
            android:id="@+id/community_gitar"
            android:layout_alignParentRight="true"
            android:background="@drawable/navi_more_navy"
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="#FCFCFC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="22dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contents"
                android:layout_margin="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="2017.12.26" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/view_unfire_navy" />
            <TextView
                android:id="@+id/unfireContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:text="1112" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/view_reply_navy"/>
            <TextView
                android:id="@+id/unreplyContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:text="354" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/view_unscrap_navy"/>
            <TextView
                android:id="@+id/unstarContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="217" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selly"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:background="@drawable/graynolinedrawable"
        android:layout_gravity="center"
        >
        <EditText
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="댓글 작성하기"
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="게시"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:gravity="center"/>
    </RelativeLayout>



</LinearLayout>
